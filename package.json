{
    "name": "vscode-ftml",
    "publisher": "zokhoi",
    "displayName": "FTML All-In-One",
    "description": "VSCode extension for support of FTML",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:ftmlPreview.start"
    ],
    "main": "./dist/extension",
    "contributes": {
        "languages": [
            {
                "id": "ftml",
                "aliases": [
                    "FTML",
                    "ftml",
                    "Wikidot code"
                ],
                "extensions": [
                    ".ftml",
                    ".wd",
                    ".wikidot",
                    ".wj",
                    ".wikijump"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ftml",
                "scopeName": "text.ftml",
                "path": "./syntaxes/ftml.tmLanguage.json",
                "embeddedLanguages": {
                    "meta.embedded.block.css": "css",
                    "meta.embedded.block.html": "html",
                    "meta.embedded.block.katex": "katex"
                }
            }
        ],
        "commands": [
            {
                "command": "ftmlPreview.start",
                "title": "Start new preview tab for the current wikitext",
                "category": "Ftml Preview"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile:vite": "node ./scripts/build.js",
        "compile:ts": "tsc -p ./",
        "compile:yaml": "pnpx js-yaml ./syntaxes/ftml.tmLanguage.yaml > ./syntaxes/ftml.tmLanguage.json",
        "compile": "pnpm run compile:yaml && pnpm run compile:vite",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@types/vscode": "^1.65.0",
        "@types/vscode-webview": "^1.57.0",
        "esbuild": "^0.14.27",
        "js-yaml": "^4.1.0",
        "toml": "^3.0.0",
        "typescript": "^4.6.2",
        "vite": "^2.8.6",
        "vite-plugin-commonjs-externals": "^0.1.1"
    },
    "dependencies": {
        "@wikijump/ftml-wasm": "^1.6.3",
        "got": "^12.0.2"
    }
}
